{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign _section = section.settings %}

<section class="section-collection-release section-{{ section.id }}-padding">
  <div class="page-width">
    {% if _section.heading != blank %}
      <header class="section__head">
       <h2>{{ _section.heading }}</h2>
      </header><!-- /.section__head -->
    {% endif %}

    {% if _section.collection != blank %}
      <div class="section__body">
        <collection-release data-slider={{ _section.enable_slider_on_desktop }}>
          <div class="splide js-slider">
            <div class="splide__track">
              <ul class="splide__list">
                {% for product in _section.collection.products limit: 8 %}
                  <li class="splide__slide">
                    {% render 'card-product',
                      card_product: product,
                      media_aspect_ratio: section.settings.image_ratio,
                      image_shape: section.settings.image_shape,
                      section_id: section.id,
                    %}
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </collection-release>
      </div><!-- /.section__body -->
    {% endif %}
  </div><!-- /.page-width -->
</section><!-- /.section-collection-release -->

