{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign _section = section.settings %}

<section class="section-collections-release section-{{ section.id }}-padding">
  <div class="page-width">
    <ul>
      {% if _section.collections != blank %}
        {% for collection in collections limit: 3 %}
          <li>
            <div class="section__content__wrapper">
              <a href="{{ collection.url }}">
                <div class="section__image">
                  {{ collection.featured_image | image_url: width: collection.featured_image.width | image_tag: loading: 'lazy', collection.featured_image.presentation.focal_point }}
                </div><!-- /.section__image -->
              </a>
            </div><!-- /.section__content__wrapper -->
          </li>
        {% endfor %}        
      {% endif %}
    
    </ul>
  </div><!-- /.page-width -->
</section><!-- /.section-collections-release -->


{% schema %}
  {
  "name": "Collections Release",
  "settings": [
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Collections",
      "limit": 3
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collections Release"
    }
  ]
}  
{% endschema %}

